host_cpu=	@host_cpu@

abs_top_srcdir=   @abs_top_srcdir@
abs_top_builddir= @abs_top_builddir@
module=		<!comp.name()!>
codelsdir=	codels
serverdir=	server
autoconfdir=	autoconf

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
includedir=	@includedir@/<!pkgname!>
datarootdir=	@datarootdir@
datadir=	@datadir@/modules

# --- Programs ----------------------------------------------------------

LANG_CXX=	@LANG_CXX@

CPP=		@CPP@
PURIFY=
SED=		sed
MKDEP=		@MKDEP@
MKINSTALLDIRS=  $(top_srcdir)/autoconf/mkinstalldirs

LIBTOOL=        @LIBTOOL@
CC=		@CC@
LTCC=           $(LIBTOOL) --tag=CC --mode=compile $(CC)
ifeq ($(LANG_CXX),yes)
CXX=		@CXX@
LTCXX=		$(LIBTOOL) --tag=CXX --mode=compile $(CXX)
endif

ifeq ($(LANG_CXX),yes)
LTLD=           $(LIBTOOL) --tag=CXX --mode=link $(PURIFY) $(CXX)
else
LTLD=           $(LIBTOOL) --tag=CC --mode=link $(PURIFY) $(CC)
endif
LTRM=           $(LIBTOOL) --mode=clean rm -f
LTINSTALL=	$(LIBTOOL) --mode=install $(INSTALL)

INSTALL_DATA=	$(INSTALL) -m 644

# --- Libraries ---------------------------------------------------------

# executables or modules
MODULE_BIN=	<!comp.name()!>$(BINEXT)
INIT_BIN=	<!comp.name()!>SendInitRqst$(BINEXT)
TEST_BIN=	<!comp.name()!>Test$(BINEXT)

# client libraries. These are versioned using the abi_version in the .gen
ABI_VERSION_INFO=	@ABI_VERSION_INFO@
CLIENT_LIB=		lib<!comp.name()!>Client$(LIBEXT)
TCLCLIENT_LIB=		lib<!comp.name()!>TclServ$(LIBEXT)
OPENPRSCLIENT_LIB=	lib<!comp.name()!>Openprs$(LIBEXT)

# Use that to link to our client library
MY_CLIENT_LIB=          $(GENOM_LIBS) $(abs_top_builddir)/server/$(OBJDIR)/$(CLIENT_LIB)

# libtool 'helper' libs -- static archives. Not installed
MODULE_LIB=		lib<!comp.name()!>Server.la
USER_LIB=		lib<!comp.name()!>Codels.la
POSTERWRITE_LIB=	lib<!comp.name()!>PosterWrite.la

# --- Servers -----------------------------------------------------------
<? #$genomPackages$
genomIncludes =""
genomLibs=""
for i in comp.importedComponents():
    name = upper(i)
    genomIncludes += " $(" + upper(i) + "_CFLAGS)"
    genomLibs += " $(" + upper(i) + "_LIBS)"
    ?>
<!name!>_CFLAGS   = 	@<!name!>_CFLAGS@
<!name!>_LIBS     = 	@<!name!>_LIBS@
<?
?>

# --- Libraries required ------------------------------------------------

SERVERS_CLIENT_LIB=  <!genomLibs!>
SERVERS_ENDIAN_LIB=  $(SERVERS_CLIENT_LIB)

CODEL_LIB=


# --- Flags -------------------------------------------------------------

OSAPI?=		@OSAPI@


ENDIANNESS=	@ENDIANNESS@

GENOM_DEFINES=  
GENOM_INCLUDES= <!genomIncludes!>
# Keep this until all codel have removed their #ifndef UNIX... stuff.
CPPFLAGS=	@CPPFLAGS@ -DUNIX
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@

OBJDIR=		$(OSAPI)-obj

LIBMATH=        @LIBMATH@

RTAI_INC=	@RTAI_INC@
KERNEL_INC=	@KERNEL_INC@

XENO_CONFIG=	@XENO_CONFIG@

<!shouldGenerateTcl!> TCL_CPPFLAGS=	@TCL_CPPFLAGS@
<!shouldGenerateTcl!> TCL_LDFLAGS=	@TCL_LDFLAGS@ @TCL_LIB_FLAG@ @TCL_LIBS@

<!shouldGenerateOpenPRS!> TRANSGEN_CFLAGS = @TRANSGEN_CFLAGS@
<!shouldGenerateOpenPRS!> TRANSGEN_LIBS = @TRANSGEN_LIBS@

<!shouldGenerateOpenPRS!>OPENPRS_CFLAGS  = @OPENPRS_CFLAGS@
<!shouldGenerateOpenPRS!>OPENPRS_LIBS    = @OPENPRS_LIBS@

GENOM_CFLAGS=	@GENOM_CFLAGS@
GENOM_LIBS=	@GENOM_LIBS@

EXTRA_INCLUDES=	@EXTRA_INCLUDES@
EXTRA_LIBS=	@EXTRA_LIBS@

-include $(top_builddir)/local.mk

