#!/bin/sh
. ${0%${0##*/}}../test.sh

mkdir -p run.t


# --- simple invocation ----------------------------------------------------
#
testing 'skeleton template invocation'

run 0 ${GENOM_BIN} skeleton -C run.t ${thisdir}../component.gen
run 0 ls -R -1 run.t
expect out '
	/^run.t:$/ {next}
	/^run.t\/codels:$/ {next}
	/^bootstrap.sh$/ {next}
	/^codels$/ {next}
	/^configure.ac$/ {next}
	/^Makefile.am$/ {next}
	/^libc_codels.pc.in$/ {next}
	/^c_t[12]_codels\.c$/ {next}
	/^c_codels\.c$/ {next}
	/^$/ {next}
	{exit 2}
'
