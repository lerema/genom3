% chapters
\def\chapter{%
   \if@openright\newpage{\pagestyle{empty}\cleardoublepage}\else\clearpage\fi%
   \thispagestyle{empty}%
   \global\@topnum\z@%
   \@afterindentfalse%
   \secdef\@chapter\@schapter%
}

\def\@makechapterhead#1{%
   \vrule height 15pt width 0pt\par{%
      \parindent\z@%
      \raggedleft\normalfont%
      \ifnum\c@secnumdepth>\m@ne%
	 \if@mainmatter%
            \fontsize{20}{20}\fontfamily{ptm}\bfseries%
	    \thechapter\par\vrule height 0pt width 0pt\par%
	 \fi%
      \fi%
      \interlinepenalty\@M\fontsize{30}{35}\bfseries%
      \parbox{\textwidth}{\raggedleft#1}\par%
      \nobreak\vskip\evensidemargin%
   }%
}

\def\@makeschapterhead#1{
   \vrule height 15pt width 0pt\par{%
      \parindent\z@
      \raggedleft\normalfont
      \interlinepenalty\@M\fontsize{30}{35}\fontfamily{ptm}\bfseries
      \parbox{\textwidth}{\raggedleft#1}\par
      \nobreak\vskip\evensidemargin
   }
}


